{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "node_modules/.prisma/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}